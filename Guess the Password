package s1p2;
import javax.swing.*;

//  @author fernandoDC

//Classe
public class S1P2 {

    //Método principal
    public static void main(String[] args) {
        //Essa string será o input do usuário
        String input;
        
        //Solicitar o input
        input = JOptionPane.showInputDialog("Coloca a senha aqui rapá!!");
        
        //Testar a acertividade
        if(input.equals("Yakult")){
            //Mostrar a mensagem em caso de correta
            System.out.println("Acertou miserávi!");
        }
        //caso erre
        else{
            System.out.println("Erro abestadi!");
        }
    }
    
}
